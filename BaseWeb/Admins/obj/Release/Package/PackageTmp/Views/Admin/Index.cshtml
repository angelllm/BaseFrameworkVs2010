<!DOCTYPE html>
<html>
<head>
    <title>管理后台</title>
    <link href="/Admins/Content/base.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <link href="/Admins/Content/theme.css" rel="stylesheet" type="text/css" />
    <script src="/Content/js/jquery-1.4.2.min.js" type="text/javascript"></script>
    <link href="/Admins/Content/AeroWindow.css?r=123" rel="stylesheet" type="text/css"/>
    <link href="/Admins/Content/jquery-ui.css?r=123" rel="stylesheet" type="text/css"/>
    <script type="text/javascript" src="/Admins/Content/js/jquery-ui-1.8.1.custom.min.js"></script> 
    <script type="text/javascript" src="/Admins/Content/js/jquery.easing.1.3.js"></script>       
</head>
 
<body>

    #foreach($item in $list)

        #set($px = "px")
        #set($x = $item.icon_position_x )
        #set($y = $item.icon_position_y )
        <div class="$item.icon_css" 
             id="$item.icon_id" 
             name ="$item.icon_name"
             resize="$item.icon_resize" 
             tpl="$item.icon_tpl" 
             init_w = "$item.icon_init_w" 
             init_h="$item.icon_init_h" 
             url="$item.icon_url"
             icon="$item.icon_image"
             style='left:$x$px;top:$y$px;'
        >
            <div class="item $item.icon_item_css" style="background-image:url($item.icon_image)"></div>
            <span>$item.icon_name</span>
            <input type="text" value="$item.icon_name" />
        </div>

        <div id="Window_$item.icon_id" class="Window" style="display:none;">
        #if($item.icon_url!="")
            <iframe src="$item.icon_url" class="iframe" name="dia_iframe"   allowtransparency="true"  width="100%" height="100%" style="border: 0px;"  scrolling="no" frameborder="0"></iframe>
        #else
            $item.icon_tpl
        #end
        </div>
        
    #end

    <div id="desk"></div>
    <div id="footer">
        <div id="tool-bar">
            <div id="windows"></div>
            <div id="menu"></div>
            <div id="show-time"></div>
            <div id="show-time-info"></div>
            <div id="show-desk"></div>
            <div class="taskbar-pre"></div>
        </div>
        <div class="clear"></div>
    </div>
    
    <script type="text/javascript" src="/admins/Content/js/jquery-AeroWindow.js"></script>
    <script type="text/javascript" src="/admins/Content/js/desk.js"></script> 
    
</body>
</html>
