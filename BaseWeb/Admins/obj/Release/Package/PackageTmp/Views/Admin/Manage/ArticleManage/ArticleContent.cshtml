

<!DOCTYPE html>
<html>
<head>
    <title>文章分页内容添加/修改 - 网站管理</title>
    <script src="/Admins/Content/js/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/jquery.artDialog.source.js?skin=aero" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/plugins/iframeTools.source.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/artDialog4.1.7/skins/base.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <script src="/Admins/Content/js/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/jquery-ui-1.10.3.custom/css/hot-sneaks/jquery-ui-1.10.3.custom.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <script charset="utf-8" src="/Content/js/ueditor/ueditor.config.js" type="text/javascript"></script>
    <script charset="utf-8" src="/Content/js/ueditor/ueditor.all.js" type="text/javascript"></script>
    <script charset="utf-8"src="/Content/js/ueditor/lang/zh-cn/zh-cn.js" type="text/javascript"></script>
   
</head>
 
<body>

<div id="containter">
    #parse("include/ArtcileLeft.cshtml" )
    <div id="right-containter">
       #parse("include/top.cshtml" )
       
       <div class="nav-menu">
            <a href="/Admin/ArticleManage/" id="btnAdd"> 返回文章列表 </a>
       </div>
       
       <div id="accordion">
	        <h3>内容添加<input type="button"  onclick="sub($item.article_id)" value=" 保存内容 " id="btnSub" /></h3>
	        <div class="edit-win edit-win-for-txt">
                <div class="waper">
                    <div class="row-item">
                        <font>标识标题:</font>
                        <div class="input title">
                            <input type="text" class = "txt title" id = "txt_title" value="$item.article_title[#set($cc=$list.Count+1)$cc]"/>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="row-item">
                        <div class="input title">
                            <textarea  id="txtContent"></textarea>
                            <script type="text/javascript">
                                var editor_a = new baidu.editor.ui.Editor();
                                editor_a.render('txtContent'); 
                            </script> 
                            
                        </div>
                        <div class="clear"></div>
                    </div>
                                 
                </div>
            </div>
	   
        
           
            #foreach ($item in $list)
           
	        <h3>$item.content_title 
                <input type="button" onclick="modify($velocityCount,$item.content_id)" class="modify" value=" 修 改 " />
                <input type="button" onclick="delete_content($item.content_id)" class="delete" value=" 删 除 " />
                <input type="text"  class="orderby" value="$item.content_order" data="$item.content_order" onblur="orderby(this,$item.content_id)"/>
            </h3>
	        <div class="edit-win edit-win-for-txt">
                <div class="waper">
                    <div class="row-item">
                        <font>标识标题:</font>
                        <div class="input title">
                            <input  type="text" value="$item.content_title" class="txt title editor-title"  id="tit_$velocityCount"/>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="row-item">
                        <div class="input title">
                           <script id="ue_$velocityCount"  class="editor-self name="ue_$velocityCount" type="text/plain">$item.content_content</script>
                           ##<textarea id="ue_$velocityCount"  class="editor-self"  >$item.content_content</textarea> 
                        </div>
                        <div class="clear"></div>
                    </div>
                                 
                </div>
            </div>
            
            #end
           
        </div>
        
        <input type="hidden" id="hfList" name="hfList" value="" />
        <input type="hidden" id="hfTitle" name="hfList" value="" />
        <div class="clear"></div>
        <div class="btn">
            
        </div>
       
       
       <script src="/Admins/Content/js/article_content.js" type="text/javascript"></script>
       <script type="text/javascript">


       </script>

        
    </div>
    <div class="clear"></div>
</div><div class="clear"></div>
</body>
</html>



