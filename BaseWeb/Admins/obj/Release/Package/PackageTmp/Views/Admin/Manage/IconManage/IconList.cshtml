 

<!DOCTYPE html>
<html>
<head>
    <title>桌面图标设置</title>
    <script src="/Content/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/jquery.artDialog.source.js?skin=aero" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/plugins/iframeTools.source.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/artDialog4.1.7/skins/base.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <script src="/Admins/Content/js/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/jquery-ui-1.10.3.custom/css/hot-sneaks/jquery-ui-1.10.3.custom.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <link href="/Admins/Content/checkbox.css" rel="stylesheet" type="text/css" />
</head>
 
<body>

<div id="containter">
    
    #parse("include/left.cshtml" )
    <div id="right-containter">
       
       #parse("include/top.cshtml" )
       ##<div class="nav-menu">
            ##<a href="/Admin/IconAdd/" id="btnAddIcon"> 添加桌面图标 </a>
       ##</div>
       <table class="tbl" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th class="guid">编号</th>
                    <th class="normal">背景图片</th>
                    <th class="normal">菜单名称</th> 
                    <th class="bit">可拖拉</th>
                    <th class="normal">初始宽</th>
                    <th class="normal">初始高</th>
                    <th class="normal">操作路径</th>
                    <th class="normal">状态</th>
                    <th class="opear">操作</th>
                </tr>
             </thead>
             <tbody>
                 #foreach($item in $list)
                    <tr class="data" data="$item.icon_id" data-title="$item.icon_name">
                        <td class="select">$item.icon_id</td>
                        <td class="guid"><img src="$item.icon_image" /></td>
                        <td class="normal">$item.icon_name</td>
                        <td class="bit">
                            <label class="switch">
                              <input 
                                col="resize"
                                data="$item.icon_id"
                                type="checkbox" 
                                class="switch-input" 
                                #if($item.icon_resize == "True")
	                                checked="checked"
                                #end
                              >
                              <span class="switch-label" data-on="On" data-off="Off"></span>
                              <span class="switch-handle"></span>
                            </label>
                        </td>
                        <td class="normal">$item.icon_init_w</td>
                        <td class="normal">$item.icon_init_h</td>
                        <td class="normal">$item.icon_url</td>
                        <td class="normal">
                            <label class="switch">
                              <input 
                                col="status"
                                data="$item.icon_id"
                                type="checkbox" 
                                class="switch-input" 
                                #if ($item.icon_status == 1)
                                   checked="checked"
                                #end
                              >
                              <span class="switch-label" data-on="On" data-off="Off"></span>
                              <span class="switch-handle"></span>
                            </label>
                        </td>
                        <td class="opear">
                            <span>
                                <label>操作</label>
                                <div class="opear-control">
                                    <a class="control-modify" data-title="$item.icon_name" data="$item.icon_id" href="javascript:void(0)"> 修 改 </a>
                                    <a href="javascript:void(0)" class="control-del" data="$item.icon_id"> 删 除 </a>
                                    <a class="control-stop" href="javascript:void(0)" data="$item.icon_id"> 禁 用 </a>
                                    <a class="control-copy" data="$item.icon_id" href="javascript:void(0)"> 复 制 </a>
                                </div>
                            </span>
                        </td>
                    </tr> 

                 #end 
                      
             </tbody>
       </table>

    <div class="pageinfo" id="pageinfo">$pageinfo</div> 

    <script src="/Admins/Content/js/icon_list.js" type="text/javascript"></script>
    <div id="temp-modify" class="hide">
           <div id="edit-win">
                <form>
                    <ul>
		                <li><a href="#tabs-1">基础设置</a></li>
		                <li><a href="#tabs-2">高级设置</a></li>
		                <li><a href="#tabs-3">其他设置</a></li>
	                </ul>
	                <div id="tabs-1">
                        <div class="edit-win">
                            <div class="waper">
                                <div class="row-item">
                                    <font>菜单名称:</font>
                                    <div class="input">
                                        <input class="txt" type="text" id="txtName" />
                                        <input class="txt" type="hidden" id="txtId" />
                                    </div>
                                    <i>请填写菜单名称!</i>
                                    <div class="clear"></div>
                                </div>
                                
                                <div class="row-item">
                                    <font>图标样式:</font>
                                    <div class="input">
                                        <input class="txt" type="text" id="txtIconCss" />
                                    </div>
                                    <i>请填写图标样式!</i>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>专属样式:</font>
                                    <div class="input">
                                        <input class="txt" type="text" id="txtCss" />
                                    </div>
                                    <i>请填写专属样式!</i>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>坐标X:</font>
                                    <div class="input">
                                        <input class="txt" type="text" id="txtX" />
                                    </div>
                                    <i>请填写坐标X!</i>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>坐标Y:</font>
                                    <div class="input">
                                        <input type="text" class="txt" id="txtY" /> 
                                    </div>
                                    <i>请填写坐标Y!</i>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>操作路径:</font>
                                    <div class="input">
                                        <input class="txt"  type="text" id="txtUrl" />
                                    </div>
                                    <div class="clear"></div>
                                </div> 
                                <div class="row-item">
                                    <font>模板:</font>
                                    <div class="input">
                                        <select id="txtTpl">
                                            <option selected="selected" value="0">--系统默认模板--</option>
                                        </select>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
       
                       </div>
                
                    </div>
	                <div id="tabs-2">
                        <div class="edit-win">
                            <div class="waper">
                                <div class="row-item">
                                    <font>背景图片:</font>
                                    <div class="input">
                                        <input type="text" class="txt" id="txtImage" />
                                    </div> 
                                    <i class="file" id="filename"></i>
                                    <div class="clear"></div>
                                </div>
                                 
                                <div class="row-item">
                                    <font>初始宽度:</font>
                                    <div class="input">
                                        <input type="text" class="txt" id="txtInitWidth" />
                                    </div>
                                    <i>请填写初始宽度!</i>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>初始高度:</font>
                                    <div class="input">
                                        <input class="txt" type="text" id="txtInitHeight" />
                                    </div>
                                    <i>请填写初始高度!</i>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </div>
	                <div id="tabs-3">
                        <div class="edit-win">
                            <div class="waper">
                                
                                <div class="row-item">
                                    <font>是否可拖拉:</font>
                                    <div class="input ck radio">
                                        <label class="switch">
                                          <input 
                                            type="checkbox" 
                                            class="switch-input" 
                                            id="cbkIsResize"
                                          >
                                          <span class="switch-label" data-on="On" data-off="Off"></span>
                                          <span class="switch-handle"></span>
                                        </label>
                                    </div>
                                    <i>是否可拖拉!</i>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>图标状态:</font>
                                    <div class="input radio">
                                        <label class="switch">
                                          <input 
                                            type="checkbox" 
                                            class="switch-input" 
                                            id="cbkStatus"
                                          >
                                          <span class="switch-label" data-on="On" data-off="Off"></span>
                                          <span class="switch-handle"></span>
                                        </label>
                                    </div>
                                    <i>是否被启用!</i>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
           </div>
       </div>
    </div>
    <div class="clear"></div>
</div>
</body>
</html>




