
<!DOCTYPE html>
<html>
<head>
    <title>页面设置</title>
    <script src="/Admins/Content/js/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/jquery.artDialog.source.js?skin=aero" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/plugins/iframeTools.source.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/artDialog4.1.7/skins/base.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <script src="/Admins/Content/js/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/jquery-ui-1.10.3.custom/css/hot-sneaks/jquery-ui-1.10.3.custom.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <script src="/content/js/uploadify/jquery.uploadify-3.1.js" type="text/javascript"></script>
    <link href="/content/js/uploadify/uploadify.css" rel="stylesheet" type="text/css" />
    <link href="/Admins/Content/checkbox.css" rel="stylesheet" type="text/css" />
</head>
 
<body>

<div id="containter">
    #parse("include/PageLeft.cshtml" )
    <div id="right-containter">
       #parse("include/top.cshtml" )
       <div class="nav-menu">
            #if($st.IsSigle == 0)
            <a href="javascript:void(0)" id="btnAdd" data="$st.type_id"> 新增设置 </a> 
            #end
       </div>
       <input type="hidden" id="hfTid" value="$id" />
       <table class="tbl" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th class="bit">编号</th>
                    <th class="normal">名称</th>
                    <th class="normal">图片</th>
                    <th class="normal">弹出</th>
                    <th class="normal">状态</th>
                    <th class="opear">操作</th>
                </tr>
             </thead>
             <tbody>
                #foreach ($item in $list)
                    <tr class="data" data="$item.page_id" data-title="$item.page_name">
                        <td class="bit">$item.page_id</td>
                        <td class="normal">$item.page_name</td>
                        <td class="normal"><img src='$item.page_image' style="max-width:50px;max-height:50px;" onerror="this.style.display='none'" /></td>
                        <td class="normal">
                            <label class="switch switch-url-type">
                              <input 
                                col="status"
                                data="$item.page_id"
                                type="checkbox" 
                                class="switch-input" 
                                #if ($item.page_url_type == "_blank")
                                   checked="checked"
                                #end
                              > 
                              <span class="switch-label" data-on="On" data-off="Off"></span>
                              <span class="switch-handle"></span>
                            </label>
                        </td>
                        <td class="normal">
                            <label class="switch switch-status">
                              <input 
                                col="status"
                                data="$item.page_id"
                                type="checkbox" 
                                class="switch-input" 
                                #if ($item.page_status == 1)
                                   checked="checked"
                                #end
                              >
                              <span class="switch-label" data-on="On" data-off="Off"></span>
                              <span class="switch-handle"></span>
                            </label>
                        </td>
                        <td class="opear">
                            <span>
                                <label>操作</label>
                                <div class="opear-control">
                                    <a class="control-modify" data-title="$item.page_name" data="$item.page_id" href="javascript:void(0)"> 修 改 </a>
                                    <a data="$item.page_id" class="control-del" href="javascript:void(0)"> 删 除 </a>
                                </div>
                            </span>
                        </td>
                    </tr> 
                #end
             </tbody>
       </table>
    <div class="pageinfo" id="pageinfo">$pageinfo</div>
    <script type="text/javascript" src="/Admins/Content/js/page_list.js"></script>
    </div>
    <div class="clear"></div>
</div>
</body>
</html>



