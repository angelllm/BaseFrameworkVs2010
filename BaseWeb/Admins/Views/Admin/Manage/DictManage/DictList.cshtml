
<!DOCTYPE html>
<html>
<head>
    <title>字典管理</title>
    <script src="/Content/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/jquery.artDialog.source.js?skin=aero" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/plugins/iframeTools.source.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/artDialog4.1.7/skins/base.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <script src="/Admins/Content/js/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/jquery-ui-1.10.3.custom/css/hot-sneaks/jquery-ui-1.10.3.custom.css" rel="stylesheet" type="text/css" charset="utf-8" />
</head>
 
<body>

<div id="containter">
    #parse("include/left.cshtml" )
    <div id="right-containter">
       #parse("include/top.cshtml" )
       <div class="nav-menu">
            <a href="javascript:void(0)" id="btnAdd"> 添加字典</a>
            <a href="javascript:void(0)" id="btnType"> 查看分类</a>
       </div>
       <table class="tbl" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                  
                    <th class="bit">编号</th>
                    <th class="normal">分类名称</th>
                    #if($isHost)
                    <th class="normal">编码</th>
                    #end
                    <th class="normal">上级分类</th>
                    <th class="opear">操作</th>
                </tr>
             </thead>
             <tbody>
                #foreach ($item in $list)
                    <tr class="data" data="$item.dict_id" data-title="$item.dict_name">
                        <td class="bit">$item.dict_id</td>
                        <td class="normal">$item.dict_name</td>
                        #if($isHost)
                        <td class="normal">$item.dict_code</td>
                        #end
                        <td class="normal">$sh.getParentName($item.dict_pid)</td>
                        <td class="opear">
                            <span>
                                <label>操作</label>
                                <div class="opear-control">
                                    <a class="control-modify" data-title="$item.dict_name" data="$item.dict_id" href="javascript:void(0)"> 修 改 </a>
                                    <a data="$item.dict_id" class="control-del" href="javascript:void(0)"> 删 除 </a>
                                </div>
                            </span>
                        </td>
                    </tr> 
                #end
             </tbody>
       </table>
        
        
        <div id="temp-modify" class="hide">
           <div id="edit-win"  class="edit-win2">
                <form>
                    <ul>
		                <li><a href="#tabs-1">基础设置</a></li>
	                </ul>
	                <div id="tabs-1">
                        <div class="edit-win">
                            <div class="waper">
                                <div class="row-item">
                                    <font>字典名称:</font>
                                    <div class="input">
                                        <input class="txt" type="text" id="txtName" />
                                        <input class="txt" type="hidden" id="txtId" />
                                    </div>
                                    <i>请填写字典名称!</i>
                                    <div class="clear"></div>
                                </div>
                                
                                <div class="row-item" #if($isHost) style="display:block" #else style="display:none" #end>
                                    <font>编码:</font>
                                    <div class="input">
                                        <input class="txt" type="text" id="txtCode" />
                                    </div>
                                    <i>请填写字典名称!</i>
                                    <div class="clear"></div>
                                </div>
                              
                                <div class="row-item">
                                    <font>上级字典:</font>
                                    <div class="input">
                                        <select class="chosen-select" id="ddlType">
                                            <option value="0">--请选择--</option>
                                            #foreach ($dict in $dictlist)
                                                <option value="$dict.dict_id">$dict.dict_name</option>
                                            #end
                                        </select>

                                    </div>
                                    
                                    <div class="clear"></div>
                                </div> 
                            </div>
       
                       </div>
                
                    </div>
	                
	                
                </form>
           </div>
       </div>

    <script type="text/javascript" src="/Admins/Content/js/dict_list.js"></script>
    </div>
    <div class="clear"></div>
</div>
</body>
</html>



