<!DOCTYPE html>
<html>
<head>
    <title>文章添加 - 网站管理</title>
    <script src="/Admins/Content/js/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/jquery.artDialog.source.js?skin=aero" type="text/javascript"></script>
    <script src="/Admins/Content/js/artDialog4.1.7/plugins/iframeTools.source.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/artDialog4.1.7/skins/base.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <script src="/Admins/Content/js/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.js" type="text/javascript"></script>
    <link href="/Admins/Content/js/jquery-ui-1.10.3.custom/css/hot-sneaks/jquery-ui-1.10.3.custom.css" rel="stylesheet" type="text/css" charset="utf-8" />
    <link href="/Admins/Content/checkbox.css" rel="stylesheet" type="text/css" />
    <link href="/Admins/Content/checkbox_list.css" rel="stylesheet" type="text/css" />
    <script charset="utf-8" src="/Content/js/ueditor/ueditor.config.js" type="text/javascript"></script>
    <script charset="utf-8" src="/Content/js/ueditor/ueditor.all.js" type="text/javascript"></script>
    <script charset="utf-8"src="/Content/js/ueditor/lang/zh-cn/zh-cn.js" type="text/javascript"></script>
    <script src="/Content/js/colorpicker/js/colorpicker.js" type="text/javascript"></script>
    <link href="/Content/js/colorpicker/css/colorpicker.css" rel="stylesheet" type="text/css" />
    <script src="/content/js/uploadify/jquery.uploadify-3.1.js" type="text/javascript"></script>
    <link href="/content/js/uploadify/uploadify.css" rel="stylesheet" type="text/css" />
</head>
 
<body style="overflow-x:hidden">

<div id="containter">
    <div id="right-containter">
       #parse("include/top.cshtml" ) 
       <div class="nav-menu">
            <a href="/Admin/NewsList/" id="btnAdd"> 返回文章列表 </a>
       </div>
       <form action="/Admin/NewsAddDo/" method="post">
       <div id="temp-modify" style="position:relative;">
            <div id="edit-win">
                    <ul>
		                <li><a href="#tabs-1">基础设置</a></li>
		                <li><a href="#tabs-2">优化设置</a></li>
		                <li><a href="#tabs-3">其他设置</a></li>
	                </ul>
	                <div id="tabs-1">
                        <div class="edit-win">
                            <div class="waper">
                                <div class="row-item">
                                    <font>文章标题:</font>
                                    <div class="input title">
                                        <input type="text" id="article_title"  name="article_title" class="txt title" />
                                        <input type="hidden" id="article_id" name="article_id" />
                                     
                                    </div>
                                    <div class="clear"></div>
                                    <div id="customWidget" style="height:auto;">
					                    <div id="colorSelector2"><div id="color-panel"></div></div>
	                                    <div id="colorpickerHolder2">
	                                    </div>
				                    </div> 
                                    <input type="hidden" id="article_title_color"  name="article_title_color" value="0" />
                                </div>
                               
                               
                                <div class="row-item">
                                    <font>分类:</font>
                                    <div class="input">
                                  
                                        <select class="chosen-select w350" id="ddlType">
                                            #foreach ($type in $list)
                                                <option value="$type.type_id">$type.type_name</option>
                                            #end
                                        </select>
                                         <input type="hidden" id="article_type" name="article_type" value="0" /> 
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                
                                
                                <div class="row-item">
                                    <font>文章摘要:</font>
                                    <div class="input title">
                                        <textarea id="article_content" name="article_content"></textarea>
                                        <script type="text/javascript">
                                            var editor_a = new baidu.editor.ui.Editor({ initialFrameWidth: 600 });
                                            editor_a.render('article_content'); 
                                        </script> 
                                    </div>
                                    <div class="clear"></div>
                                </div>

                                <div class="row-item">
                                    <font>首页推荐:</font>
                                    <div class="input radio">
                                        <label class="switch">
                                          <input type="checkbox" id="article_is_top" name="article_is_top" class = "switch-input" value="false"/>  
                                          <span class="switch-label" data-on="On" data-off="Off"></span>
                                          <span class="switch-handle"></span>
                                        </label>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>状态:</font>
                                    <div class="input radio">
                                        <label class="switch">
                                          <input type="checkbox" checked id="article_status" name="article_status" value="1" class = "switch-input"/>
                                          <span class="switch-label" data-on="On" data-off="Off"></span>
                                          <span class="switch-handle"></span>
                                        </label>
                                    </div>
                                    <div class="clear"></div>
                                </div>

                            </div>
       
                       </div>
                
                    </div>
	                <div id="tabs-2">
                        <div class="edit-win">
                            <div class="waper">
                                <div class="row-item">
                                    <font>摘要:</font>
                                    <div class="input">
                                        <textarea id="article_summary" name="article_summary" class = "area title"></textarea>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>SEO KW:</font>
                                    <div class="input">
                                        <textarea id="article_seo_kw" name="article_seo_kw" class = "area title"></textarea>
                                    </div>
                                    <div class="clear"></div>
                                </div> 
                                <div class="row-item">
                                    <font>SEO DES:</font>
                                    <div class="input">
                                        <textarea id="article_seo_desc" name="article_seo_desc" class = "area title"></textarea>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </div>
	                <div id="tabs-3">
                        <div class="edit-win">
                            <div class="waper">
                                
                                <div class="row-item">
                                    <font>短标题:</font>
                                    <div class="input">
                                        <input type="text" id="article_shut_title" name="article_shut_title" class="txt title" />
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>标题颜色:</font>
                                    <div class="input">
                                        <input type="text" id="article_title_color" name="article_title_color" class="txt title article_title_color" />
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>引用地址:</font>
                                    <div class="input">
                                        <input type="text" id="article_ref_url" name="article_ref_url" class="txt title" />
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>来源:</font>
                                    <div class="input">
                                        <input type="text" id="article_source" name="article_source" class="txt title" value = "本站自创"  />
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="row-item">
                                    <font>图片:</font>
                                    <div class="input" style="width:auto;">
                                        <input type="hidden" id="hfImage" name="hfImage" />
                                        <div id="fileQueue" style="display:inline"></div>
                                        <input type="file" name="file_upload" id="file_upload" />
                                        <div id="qid"></div> 
                                        <span id="ImageShow" style="display:block"></span>
                                        <style type="text/css">
                                            .uploadify-queue-item .cancel a {
                                            background: url('/content/js/uploadify/uploadify-cancel.png') 0 0 no-repeat;
                                            float: right;
                                            height: 16px;
                                            text-indent: -9999px;
                                            width: 16px;
                                            }
                                        </style> 
                                    </div> 
                                    <div class="clear"></div>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                    <div class="btn" style="left:450px;top:179px;position:absolute;">
                        <input type="hidden" id="hfSaveType" name="hfSaveType" value="0" />
                        <input type="button" onclick="subs(0)" value="提交并返回列表" style="width:180px;height:60px;line-height:50px;display:block;" id="btnSave" />
                        <input type="submit" value="提 交" style="display:none;" id="btnSub" />
                    </div>
               
           </div>
       </div>
       </form>
       <script src="/Admins/Content/js/article_comm.js" type="text/javascript"></script>
       <script src="/Content/js/chosen.jquery.js" type="text/javascript" charset="utf-8"></script>
       <script src="/Content/js/prism.js" type="text/javascript" charset="utf-8"></script>
       <script src="/Admins/Content/js/article_add.js" type="text/javascript"></script>
       <script type="text/javascript">


       </script>

        
    </div>
    <div class="clear"></div>
</div>
</body>
</html>



